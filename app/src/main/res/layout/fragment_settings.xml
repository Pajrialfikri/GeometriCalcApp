<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EA376"
    tools:context=".SettingsFragment"
    android:orientation="vertical"
    android:id="@+id/homeFrame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="550dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/bangun_ruang" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:src="@drawable/kubus"
            android:id="@+id/kubus"
            android:onClick="imageViewClicked"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:src="@drawable/balok"
            android:id="@+id/balok"
            android:onClick="imageViewClicked"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:src="@drawable/silinder"
            android:id="@+id/silinder"
            android:onClick="imageViewClicked"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:src="@drawable/kerucut"
            android:id="@+id/kerucut"
            android:onClick="imageViewClicked"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:src="@drawable/bola"
            android:id="@+id/bola"
            android:onClick="imageViewClicked"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:src="@drawable/prisma"
            android:id="@+id/prisma"
            android:onClick="imageViewClicked"/>

    </LinearLayout>

</LinearLayout>